#include <iostream>
using namespace std;

int main ()
{
	//deklarasi variable
	float total_pembelian,diskon,total_belanja;
	float uang_konsumen;
	//minta input dari user total pembelian
	cout << "Masukan total pembelian =" ;
	cin >>total_pembelian ;
	diskon = 0;
	if (total_pembelian >=500000)
	{
		diskon = 0.1*total_pembelian ;
	}
	total_belanja = total_pembelian - diskon;
	cout << "Total Diskon ="<<diskon;
	cout << endl;
	cout << "Total Pembelian ="<<total_belanja ;
	cout << endl;
}
